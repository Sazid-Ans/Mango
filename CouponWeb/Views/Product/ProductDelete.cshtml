@model ProductDto

<form asp-action="ProductDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Edit Product</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Name</label>
            </div>
            <input hidden asp-for="ProductId" />
            <div class="col-10 pb-3">
                <input asp-for="Name" readonly="true" class="form-control" />@* use readonly instead of disabled
                                                                               as post action will not work.*@
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">CategoryName</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" readonly="true" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled rows="5" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" disabled class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" disabled class="form-control" />
                <span asp-validation-for="Price" class="text-danger" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Product" asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
            }