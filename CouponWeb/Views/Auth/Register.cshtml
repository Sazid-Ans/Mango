@model RegistrationRequestDto

<form method="post" asp-action="Register" asp-controller="Auth">
    <div class="container border p-4 align-items-center">
        <div class="row text-center p-3">
            <h1>register</h1>
        </div>
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserEmail" class="form-control" placeholder="Email..." />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="Name..." />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserPhoneNumber" class="form-control" placeholder="Phone Number..." />
                <span asp-validation-for="UserPhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="UserRole" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Register</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
            }